script(type="text/x-template")#reviews-container
  .reviews_data
    .reviews_header
      .reviews_title Что обо мне говорят
      .reviews_buttons
        button(type="button" @click="slide('prev')").reviews_btn.prev
        button(type="button" @click="slide('next')").reviews_btn.next
    swiper(ref="slider" :options="sliderOptions")    
      swiper-slide(v-for="review in reviews" :key="review.id")
        .quote
          .review_text
            p {{review.text}}
          .review_user
            .user_block
              .avatar
                .user-min__pic-wrapper(:style="{ backgroundImage: `url(${review.pic})` }",)
                  //- img.user-min__avatar-pic(:style="{ backgroundImage: `url(${review.pic})` }",)
              .info
                p.name {{review.author}}
                p.position {{review.occ}}