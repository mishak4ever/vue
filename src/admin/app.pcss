.page-container {
  max-width: $bp-desktop;
  margin: 0 auto;
  width: 100%;
}

.root-container {
  min-height: 100vh;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  &:before {
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: url("~images/content/mountain_baloon.jpg") center center / cover
      no-repeat;
    z-index: -1;
    opacity: 0.3;
  }
}

.login-container {
  opacity: 0.8;
  background-color: $text-color;
}

.notification {
  transition: transform 0.3s;
}

.route {
  width: 100%;
}

.nav {
  background-color: #ffffff;
}

.tooltip-container {
  position: fixed;
  top: 0%;
  left: 50%;
  transform: translateY(-100%);

  &.active {
    .notification {
      transform: translateY(+100%);
    }
  }
}
