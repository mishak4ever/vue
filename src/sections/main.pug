.section_main#section_main
  section.fullscreen-section
    .container.hero_container
      header.header_main
        .top
          .logo
            a.logo(href="") ВА 
          .menu 
            ul.menu_list
              - var menuButtons = ["Обо мне", "Навыки", "Работы", "Отзывы"];
              - var menuLinks = ["section_about", "section_skills", "section_works", "section_reviews"];
              - for (let i = 0; i < menuButtons.length; i++)
                  li.menu_item.menu_item_top_menu
                    a(href=`#${menuLinks[i]}`).menu_link #{menuButtons[i]}
          .socials_top
            ul.socials
              - var socialButtons = ['insta', 'vk', 'github', 'envelope'];
              each item in socialButtons
                li.socials_item
                  a(href='#' target="_blank").socials_link
                    +icon(item, 'socials_icon socials_icon_top_menu')
          .menu_button
            +icon('menu', 'socials_icon socials_icon_top_menu')
      .user_title
        .userinfo
          .main_subtitle 
            p Личный сайт
            p веб разработчика
          .main_title 
            h1 Владимир  Астаханов
      .scroll
        .scroll_down
          a(href="#section_about").scroll_down_btn Скролл
  include about
.triangles_bottom
  include triangles