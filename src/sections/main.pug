.header
  section.fullscreen-section.section_main
    .container.main_container
      header.top
        .logo
          a.logo(href="") ВА 
        .menu 
            nav.menu
              ul.menu_list
                - var menuButtons = ["Обо мне", "Навыки", "Работы", "Отзывы"];
                  each item in menuButtons 
                    li.menu_item
                      a(href="#").menu_link #{item}
        .social
          ul.socials
            - var socialButtons = ['insta', 'vk', 'github', 'envelope'];
            each item in socialButtons
              li.socials_item
                a(href='#').socials_link
                  +icon(item, 'socials_icon')
